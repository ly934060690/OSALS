<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    
    <!-- 配置连接数据库的基本信息 -->
    <property name="connection.username">root</property>
    <property name="connection.password">z123</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql:///eesy?useUnicode=true&characterEncoding=utf8&serverTimezone=GMT%2B8&useSSL=false</property>
    
    <!-- 配置 hibernate基本信息 -->
    <!-- hibernate所使用得数据库方言 -->
    <property name="dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
    
    
    <!-- 执行操作时是否在控制台打印sql -->
    <property name="show_sql">true</property>
    <!-- 是否对sql格式化 -->
    <property name="format_sql">true</property>
    
    <!-- 指定自动生成数据表的策略 -->
    <property name="hbm2dd.auto">update</property>
    
    <!-- 指定关联的 .hbm.xml文件 -->
    <mapping resource="com/zcw/hibernate/hello/News.hbm.xml"/>
    
    </session-factory>
</hibernate-configuration>
